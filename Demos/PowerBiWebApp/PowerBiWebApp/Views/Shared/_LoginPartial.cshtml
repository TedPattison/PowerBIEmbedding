@using System.Security.Claims

@if (Request.IsAuthenticated) {
  ClaimsPrincipal principal = ClaimsPrincipal.Current;
  string userName = principal.FindFirst("name").Value;

  <text>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        @Html.ActionLink("Hello " + userName, "UserProfile", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link" })
      </li>
      <li class="nav-item">
        @Html.ActionLink("Sign out", "SignOut", "Account", routeValues: null, htmlAttributes: new { @class = "nav-link" })
      </li>
    </ul>
  </text>
}
else {
  <ul class="navbar-nav ml-auto">
    <li class="nav-item">
      @Html.ActionLink("Sign in", "SignIn", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })
    </li>
  </ul>
}
